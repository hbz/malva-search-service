{
    "webapp": {
      "uri": [
        "http://localhost:9500/"
      ],
      "template" : {
        "locale" : "de-DE"
      },
      "handler" : {
        "requestlogger" : {
          "type": "org.xbib.webapp.logging.RequestLogHandler"
        },
        "accesslogger" : {
          "type": "org.xbib.webapp.logging.CombinedAccessLogHandler"
        }
      },
      "mapper": {
        "mapper1": {
          "type": "org.xbib.webapp.resource.MarkupTemplateMapper",
          "script": "lp/index.tpl",
          "path": "/lp/{base_region}/"
        },
        "mapper2": {
          "type": "org.xbib.webapp.resource.MarkupTemplateMapper",
          "script": "lp/json.tpl",
          "path": "/lp/json/{base_region}/"
        },
        "mapper3": {
          "type": "org.xbib.webapp.resource.MarkupTemplateMapper",
          "script": "lp/xml.tpl",
          "path": "/lp/json/{base_region}/"
        },
        "mapper4": {
          "type": "org.xbib.webapp.resource.MarkupTemplateMapper",
          "script": "sru/index.tpl",
          "path": [
            "/sru/{index}/",
            "/sru/{index}",
            "/sru"
          ]
        },
        "mapper5": {
          "type": "org.xbib.webapp.resource.MarkupTemplateMapper",
          "script": "fl/index.tpl",
          "path": [
            "/fl/key/{key}"
          ]
        }
      },
      "sessions": {
        "enabled": true,
        "cookies": {
          "path": "/"
        }
      },
      "logging": {
        "access": {
          "enabled": false
        },
        "request": {
          "enabled": false
        }
      },
      "index": {
        "creation": {
          "enabled": false,
          "timestamp" : {
            "enabled": false
          }
        }
      }
  },
