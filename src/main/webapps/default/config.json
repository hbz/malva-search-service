{
    "webapp": {
      "uri": [ "http://${net.hostname}:9500/" ],
      "template" : {
        "locale" : "de-DE"
      },
      "extension" : {
        "sru" : {
          "type": "org.xbib.webapp.extensions.sru.SRUExtension"
        }
      },
      "handler" : {
        "requestlogger" : {
          "type": "org.xbib.webapp.logging.RequestLogHandler"
        },
        "accesslogger" : {
          "type": "org.xbib.webapp.logging.CombinedAccessLogHandler"
        }
      },
      "mapper": {
        "mapper1": {
          "type": "org.xbib.webapp.resource.mapper.MarkupTemplateMapper",
          "script": "sru/index.tpl",
          "path": [
            "/sru/{index}/",
            "/sru/{index}"
          ]
        }
      },
      "sessions": {
        "enabled": false,
        "cookies": {
          "path": "/"
        }
      },
      "logging": {
        "access": {
          "enabled": true
        },
        "request": {
          "enabled": true
        }
      },
      "index": {
        "creation": {
          "enabled": false,
          "timestamp" : {
            "enabled": false
          }
        }
      }
  }
}
